{
	"name": "svelte-spectre",
	"version": "0.1.0",
	"private": true,
	"main": "./package/index.js",
	"scripts": {
		"dev": "svelte-kit dev --port 3030",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"package": "svelte-kit package && find package/ -empty -type d -delete",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.json",
		"test:watch": "npm run test -- --watch",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"engines": {
		"node": ">= 15",
		"npm": ">= 7"
	},
	"devDependencies": {
		"@babel/core": "^7.14.0",
		"@babel/preset-env": "^7.14.0",
		"@storybook/addon-actions": "^6.3.8",
		"@storybook/addon-essentials": "^6.3.8",
		"@storybook/addon-links": "^6.3.8",
		"@storybook/addon-svelte-csf": "^1.1.0",
		"@storybook/svelte": "^6.3.8",
		"@sveltejs/kit": "^1.0.0-next.169",
		"@testing-library/jest-dom": "^5.14.0",
		"@testing-library/svelte": "^3.0.0",
		"@types/jest": "^27.0.1",
		"@types/mocha": "^9.0.0",
		"@types/testing-library__jest-dom": "^5.14.0",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"autoprefixer": "^10.3.4",
		"babel-jest": "^27.0.0",
		"babel-loader": "^8.2.2",
		"cssnano": "^5.0.8",
		"esbuild-plugin-sass": "^0.6.0",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"jest": "^27.0.0",
		"postcss": "^8.3.6",
		"postcss-load-config": "^3.1.0",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"sass": "^1.39.2",
		"spectre.css": "^0.5.9",
		"svelte": "^3.42.5",
		"svelte-check": "^2.0.0",
		"svelte-jester": "^2.0.1",
		"svelte-loader": "^3.1.2",
		"svelte-morphing-modal": "^2.2.0",
		"svelte-preprocess": "^4.9.4",
		"svelte2tsx": "^0.4.5",
		"ts-jest": "^27.0.0",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0"
	},
	"type": "module"
}
